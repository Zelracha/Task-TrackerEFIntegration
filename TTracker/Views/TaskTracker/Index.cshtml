@model List<TTracker.Models.Task>

<button type="button" class="btn btn-primary"
        onclick="location.href='@Url.Action("ManageTask", "TaskTracker" )'">
    Add Task
</button>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Task ID</th>
            <th scope="col">Task Status</th>
            <th scope="col">Task Name</th>
            <th scope="col">Description</th>
            <th scope="col">Due Date</th>
            <th scope="col">Update Status</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < Model.Count; i++)
{
            <tr>
                <td scope="row">@Model[i].Id</td>
                <td>@(Model[i].TaskStatus ? "ToDo" : "Done")</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Description</td>
                <td>@Model[i].dueDate</td>
                <td>
                    <button type="button" class="btn btn-primary"
                            onclick="location.href='@Url.Action("UpdateStatus", "TaskTracker", new { id = Model[i].Id })'">
                        Mark as Done
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-primary"
                            onclick="location.href='@Url.Action("ManageTask", "TaskTracker" , new {id = Model[i].Id} )'">
                        Edit
                    </button>
                </td>
            </tr>
}
    </tbody>
</table>